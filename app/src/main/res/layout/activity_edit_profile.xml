<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="editProfileVM" type="com.avassapplication.app.modules.editprofile.data.viewmodel.EditProfileVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearEditprofile"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearTopbarcontain"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <ImageButton
                android:background="@drawable/rectangle_bg_gray_201_radius_8"
                android:id="@+id/btnArrowleft"
                android:layout_height="@dimen/_40pxh"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_64pxv"
                android:layout_width="@dimen/_40pxh"
                android:paddingHorizontal="@dimen/_14pxh"
                android:paddingVertical="@dimen/_14pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtCategoryPageT"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtCategoryPageT}"
                style="@style/txtPoppinsbold24" tools:text="@string/lbl_edit_profile"/>
        </LinearLayout>
        <ImageView android:id="@+id/imageImagecompone"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_159pxh"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_11pxv"
            android:layout_width="@dimen/_159pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_imagecompone}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_imagecompone"/>
        <EditText
            android:background="@drawable/rectangle_border_gray_300_radius_10"
            android:ellipsize="end" android:hint="@string/lbl_name"
            android:id="@+id/etNameinput" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_17pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_19pxh"
            android:paddingTop="@dimen/_18pxv" android:singleLine="true"
            android:text="@={editProfileVM.editProfileModel.etNameinputValue}"
            android:textColorHint="@color/gray_400"
            style="@style/etRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_border_gray_300_radius_10"
            android:ellipsize="end"
            android:hint="@string/lbl_name_email_com"
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_19pxh"
            android:paddingTop="@dimen/_19pxv" android:singleLine="true"
            android:text="@={editProfileVM.editProfileModel.etEmailValue}"
            android:textColorHint="@color/gray_400"
            style="@style/etRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_border_gray_300_radius_10"
            android:ellipsize="end" android:hint="@string/lbl_birthday"
            android:id="@+id/etDateinput" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_19pxh"
            android:paddingTop="@dimen/_19pxv" android:singleLine="true"
            android:text="@={editProfileVM.editProfileModel.etDateinputValue}"
            android:textColorHint="@color/gray_400"
            style="@style/etRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_border_gray_300_radius_10"
            android:ellipsize="end"
            android:hint="@string/lbl_phone_number2"
            android:id="@+id/etTelinput" android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_19pxh"
            android:paddingTop="@dimen/_19pxv" android:singleLine="true"
            android:text="@={editProfileVM.editProfileModel.etTelinputValue}"
            android:textColorHint="@color/gray_400"
            style="@style/etRoundedOutline_1" tools:ignore="Autofill"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnSaveEdits"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_48pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv" android:singleLine="true"
            android:text="@string/lbl_save_edits"
            android:textAllCaps="false" style="@style/btnSolidRounded_3" tools:text="@string/lbl_save_edits"/>
    </LinearLayout>
</layout>
